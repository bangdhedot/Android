<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMonitoring" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_one</item>
        <item name="colorPrimaryVariant">@color/maroon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlackText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlackTextOne">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">12sp</item>
    </style>

    <style name="BlackTextTwo">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">18sp</item>
    </style>

    <style name="BlackTextThree">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">14sp</item>
    </style>

    <style name="BlackTextFour">
        <item name="android:textColor">#F0F0F0</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:text">12sp</item>
    </style>
</resources>